<div class="container">
    <div class="contenedor">
        <div class="row div-login" id="divLogin">
            <div class="col-sm-12 col-md-12 col-lg-5 logo-login">
                <img src="images/imagen2.png" alt="" height="500px" class="w-100">
            </div>
            <div class="col-sm-12 col-md-12 col-lg-1 linea-login">

            </div>
            <div class="col-sm-12 col-md-12 col-lg-6 text-end contenerdor-login">
                <div class="row login">
                    <div class="col-12 text-center">
                        <img src="images/imagen3.png" alt="" class="w-50">
                    </div>
                    <div class="mt-2 col-12">
                        <label for="txtUsusario" class="form-label">Usuario</label>
                        <input type="email" class="form-control" id="txtUsusario" placeholder="Usuario">
                    </div>
                    <div class="mt-2 col-12">
                        <label for="txtPasword" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" id="txtPasword" placeholder="Contraseña">
                    </div>
                    <a type="button" id="btnRegistrarse" class="a-link">Registrarse</a>
                    <span id="spanLogin" class="d-none span-advertencia"></span>
                    <div class="col-12 mt-2">
                        <button class="btn btn-primary col-6" id="btnLogin">Ingresar</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-none div-estandar" id="divRegistrar">
            <h1 class="mb-4">Registrar Usuario</h1>
            <div class="row div-registrar">
                <div class="mt-1 col-md-3">
                    <label for="txtNombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="txtNombre" placeholder="Nombre">
                </div>
                <div class="mt-1 col-md-3">
                    <label for="sltTipoDoc" class="form-label">Tipo de documento</label>
                    <select class="form-select" id="sltTipoDoc"></select>
                </div>
                <div class="mt-1 col-md-3">
                    <label for="txtNumeroDocumento" class="form-label">Numero de documento</label>
                    <input type="text" class="form-control" id="txtNumeroDocumento" placeholder="Numero de documento">
                </div>
                <div class="mt-1 col-md-3">
                    <label for="txtCorreo" class="form-label">Correo</label>
                    <input type="text" class="form-control" id="txtCorreo" placeholder="Correo">
                </div>
                <div class="mt-1 col-md-3">
                    <label for="txtTelefono" class="form-label">Telefono</label>
                    <input type="text" class="form-control" id="txtTelefono" placeholder="Telefono">
                </div>
                <div class="mt-1 col-md-3">
                    <label for="sltRoles" class="form-label">Rol</label>
                    <select class="form-select" id="sltRoles"></select>
                </div>
                <div class="mt-3 col-md-12">
                    <h2>Datos inicio sesion</h2>
                </div>
                <div class="mt-1 col-md-6">
                    <label for="txtUsuarioRegister" class="form-label">Usuario</label>
                    <input type="text" class="form-control" id="txtUsuarioRegister" placeholder="Usuario">
                </div>
                <div class="mt-1 col-md-6">
                    <label for="txtPaswordRegister" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="txtPaswordRegister" placeholder="Contraseña">
                </div>
            </div>
            <div class="mt-4 col-md-12 text-end">
                <button class="btn btn-secondary col-2" id="btnVolverRegistrarse">Cancelar</button>
                <button class="btn btn-primary col-2" id="btnRegistro">Registrarse</button>
            </div>
        </div>
    </div>
</div>
<partial name="Script/LoginScript"></partial>